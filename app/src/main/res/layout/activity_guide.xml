<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/guide_bg"
    android:theme="@style/ThemeOverlay.DarkCalculator.FullscreenContainer"
    tools:context=".guide.GuideActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager2.widget.ViewPager2>

    <LinearLayout
        android:id="@+id/ll_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/common_bg_1"
        android:padding="4dp">

        <View
            android:id="@+id/p1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/guide_point" />

        <View
            android:id="@+id/p2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/guide_point" />

        <View
            android:id="@+id/p3"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/guide_point" />
    </LinearLayout>

</FrameLayout>